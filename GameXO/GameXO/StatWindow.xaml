<Window x:Class="GameXO.StatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameXO"
        mc:Ignorable="d"
        Title="Окно статистики" Height="300" Width="400" ResizeMode="NoResize">
    <Grid x:Name="StatGrid" >
        <DataGrid x:Name="dataGridStat" IsReadOnly="True" Width="390" Height="230" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBoxWinRate" Width="390" Height="27" VerticalAlignment="Bottom" TextAlignment="Center" FontSize="20" FontWeight="Bold" />
    </Grid>
</Window>
